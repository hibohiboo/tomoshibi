{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "allowJs": false,
    "skipLibCheck": true, // react native で declare が被るためスキップする
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./client/src/*"]
    },
    "experimentalDecorators": true, // アノテーションが使えるようにする
    "emitDecoratorMetadata": true, // アノテーションが使えるようにする
    "sourceMap": true
  },
  "plugins": [{ "name": "typescript-styled-plugin" }],
  // "exclude": ["node_modules"],
  "include": [
    "client/src",
    "client/tests",
    "node_modules/vite-plugin-pwa/client.d.ts" //  'virtual:pwa-register' のimport用
  ]
}
